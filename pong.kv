# -*- coding: utf-8 -*-
#:kivy 1.8.0


<PongBall>:
    size: 50,50
    canvas:

        Color:

            rgba: 1, .3, .8, .5

        Ellipse:
            pos: self.pos
            size: self.size


<PongPaddle>:
    size: 10,200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right

    canvas:        

        #color: 
        #    rgba: 1, .3, .8, .5

        Rectangle:
            pos: self.center_x - 5 , 0
            size: 10, self.height
        
        
    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x+50
        center_y: root.center_y
        

    PongPaddle:
        id: player_right
        x: root.width - self.width-50
        center_y: root.center_y














